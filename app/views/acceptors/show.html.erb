<%- model_class = @acceptor.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:first_name) %>:</strong><br>
  <%= @acceptor.first_name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:last_name) %>:</strong><br>
  <%= @acceptor.last_name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:address) %>:</strong><br>
  <%= @acceptor.address %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:zipcode) %>:</strong><br>
  <%= @acceptor.zipcode %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:state_id) %>:</strong><br>
  <%= @acceptor.state_id %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:region) %>:</strong><br>
  <%= @acceptor.region %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:category_id) %>:</strong><br>
  <%= @acceptor.category_id %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              acceptors_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_acceptor_path(@acceptor), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              acceptor_path(@acceptor),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
